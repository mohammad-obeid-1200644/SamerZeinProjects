<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@color/skyblue"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kindergarden_training_course"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guess_the_picture"
        android:background="@color/Red"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:text="Lets Start The Challenge !"
        android:background="@color/purple_200"
        android:textSize="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/skyblue"
        android:textSize="30dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        android:background="@color/purple_200"
        android:text="Which One Is The Fruit ?"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/appled"
        android:layout_marginTop="60dp"
        />
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RadioButton android:id="@+id/radio_Apple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:background="@color/Lightgreen"
        android:layout_marginTop="10dp"
        android:onClick="appleclk"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tomato"
            android:layout_marginTop="60dp"
            />

        <RadioButton android:id="@+id/Tomato"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Select"
            android:layout_marginTop="10dp"
            android:background="@color/Lightgreen"
            android:onClick="tomatclk"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whats The Animal ?"
        android:textColor="@color/skyblue"
        android:background="@color/purple_200"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/animal"
        />
    <Spinner
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/animalid"
        android:textSize="40dp"
        android:drawSelectorOnTop="true"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type The Color Of The Sky"
        android:textColor="@color/skyblue"
        android:background="@color/purple_200"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/sky"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Type here please"
        android:textSize="20dp"
        android:textColorHint="@color/teal_200"
        android:background="@color/purple_200"
        android:id="@+id/skyclredt"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which is used when playing baseball?"
        android:textSize="20dp"
        android:background="@color/purple_200"
        android:textColor="@color/skyblue"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RadioButton android:id="@+id/basket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basket"
        android:layout_gravity="center"
        android:background="@color/Lightgreen"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:onClick="basketclk"/>
        <RadioButton android:id="@+id/racket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Racket"
            android:layout_gravity="center"
            android:background="@color/Lightgreen"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:onClick="racketclk"/>
        <RadioButton android:id="@+id/mitt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mitt"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:background="@color/Lightgreen"
            android:layout_marginTop="10dp"
            android:onClick="mittclk"/>
        <RadioButton android:id="@+id/stick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stick"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:background="@color/Lightgreen"
            android:layout_marginTop="10dp"
            android:onClick="stickclk"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whats The Correct Spelling?"
        android:background="@color/purple_200"
        android:textColor="@color/skyblue"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton android:id="@+id/clr1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gren"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:background="@color/Lightgreen"
            android:layout_marginTop="10dp"
            android:onClick="clr1clk"/>
        <RadioButton android:id="@+id/clr2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="grin"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:background="@color/Lightgreen"
            android:layout_marginTop="10dp"
            android:onClick="clr2clk"/>
        <RadioButton android:id="@+id/clr3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="green"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:background="@color/Lightgreen"
            android:layout_marginTop="10dp"
            android:onClick="clr3clk"/>
    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="Show The Score!"
        android:layout_marginTop="20dp"
        android:id="@+id/showbtn"
        android:onClick="showclk"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_200"
        android:textColor="@color/skyblue"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/restxt"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="Show The Wrong Answers"
        android:layout_marginTop="20dp"
        android:id="@+id/wrngbtn"
        android:onClick="wrongbtn"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_200"
        android:textColor="@color/skyblue"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/wrntxt"
        />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/finish"
    android:layout_gravity="center"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="50dp"/>




</LinearLayout>
</ScrollView>